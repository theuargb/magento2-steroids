<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ai_self_healing>
            <general>
                <enabled>0</enabled>
                <mode>monitor_only</mode>
            </general>
            <agent>
                <endpoint_url>http://localhost:8100</endpoint_url>
                <heal_timeout_seconds>12</heal_timeout_seconds>
                <fallback_timeout_seconds>8</fallback_timeout_seconds>
                <max_tool_calls>10</max_tool_calls>
            </agent>
            <url_filters>
                <strategy>all</strategy>
                <patterns></patterns>
                <exclude_patterns>/admin/*&#10;/healthcheck&#10;/rest/*&#10;/graphql</exclude_patterns>
            </url_filters>
            <response_rewrite>
                <enabled>0</enabled>
                <allowed_url_patterns></allowed_url_patterns>
                <http_status_code>200</http_status_code>
            </response_rewrite>
            <snapshot>
                <cron_frequency>every_6h</cron_frequency>
            </snapshot>
            <safety>
                <max_attempts_per_fingerprint_per_hour>3</max_attempts_per_fingerprint_per_hour>
                <max_concurrent_healings>2</max_concurrent_healings>
                <disallowed_tool_actions></disallowed_tool_actions>
                <readonly_mode>0</readonly_mode>
            </safety>
        </ai_self_healing>
    </default>
</config>