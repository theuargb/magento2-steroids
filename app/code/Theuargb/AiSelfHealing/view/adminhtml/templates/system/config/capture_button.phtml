<div id="aiselfhealing_capture_snapshot_wrapper">
    <?= $block->getButtonHtml() ?>
</div>
<script type="text/javascript">
    require(['jquery'], function($) {
        $('#aiselfhealing_capture_snapshot').on('click', function() {
            var button = $(this);
            button.text('<?= $block->escapeJs(__('Capturing...')) ?>').prop('disabled', true);

            $.ajax({
                url: '<?= $block->escapeUrl($block->getAjaxUrl()) ?>',
                type: 'POST',
                dataType: 'json',
                data: {
                    form_key: FORM_KEY
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                    } else {
                        alert(response.message || '<?= $block->escapeJs(__('Capture failed.')) ?>');
                    }
                },
                error: function() {
                    alert('<?= $block->escapeJs(__('An error occurred. Please try again.')) ?>');
                },
                complete: function() {
                    button.text('<?= $block->escapeJs(__('Capture Snapshot Now')) ?>').prop('disabled', false);
                }
            });
        });
    });
</script>
