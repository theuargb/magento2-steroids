<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <steroids>
            <general>
                <enabled>0</enabled>
            </general>
            <llm>
                <provider>openai_gpt5</provider>
                <api_key/>
                <custom_provider>openai</custom_provider>
                <model>gpt-4o</model>
                <base_url/>
            </llm>
            <agent>
                <heal_timeout_seconds>30</heal_timeout_seconds>
                <fallback_timeout_seconds>15</fallback_timeout_seconds>
                <fallback_cache_ttl_seconds>3600</fallback_cache_ttl_seconds>
                <max_tool_calls>10</max_tool_calls>
            </agent>
            <url_filters>
                <!-- URL rules configured via dynamic rows in admin. Empty by default. -->
            </url_filters>
            <design>
                <design_json/>
                <firecrawl_api_key/>
                <firecrawl_store_url/>
            </design>
            <safety>
                <max_attempts_per_fingerprint_per_hour>3</max_attempts_per_fingerprint_per_hour>
                <max_concurrent_healings>2</max_concurrent_healings>
                <disallowed_tool_actions></disallowed_tool_actions>
                <allow_file_writes>0</allow_file_writes>
            </safety>
        </steroids>
    </default>
</config>